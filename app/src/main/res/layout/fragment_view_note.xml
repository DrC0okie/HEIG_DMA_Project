<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.fragment.ViewNoteFragment">

    <TextView
        android:id="@+id/tvViewDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_note_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_label"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvViewNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sample Note Title"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textIsSelectable="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_label"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvViewNoteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is the detailed text of the sample note. It could be quite long and wrap over multiple lines."
        android:textAppearance="?attr/textAppearanceBody1"
        android:textIsSelectable="true"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/layoutViewNoteLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_selected_marker_title"
            android:textAppearance="?attr/textAppearanceCaption"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvViewNoteLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="123 Main Street, Anytown, USA"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textIsSelectable="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnViewNoteClose"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/close_button_text"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnViewNoteEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_button_text"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>

    